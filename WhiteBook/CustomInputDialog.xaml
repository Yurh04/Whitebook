<Window x:Class="WhiteBook.CustomInputDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Custom Mood" Height="150" Width="300"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="resources/皇马7.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Grid>
        <Label Content="Please enter your mood:" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="10"/>
        <TextBox x:Name="InputTextBox" Width="200" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Content="OK" Width="75" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" Click="OK_Click"/>
    </Grid>
</Window>